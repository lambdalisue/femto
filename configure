#!/usr/bin/env bash
# install required modules
npm install expect.js mocha

# create required dirs
mkdir -p www/js
mkdir -p www/css

# link files
cd www/js
ln -sf ../../node_modules/mocha/mocha.js
ln -sf ../../node_modules/expect.js/expect.js
cd ../css
ln -sf ../../node_modules/mocha/mocha.css
cd ../
